<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/backgroud_update_dialog"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#121314"
            android:textSize="20sp"
            android:paddingTop="40dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_c"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="取消"
            android:layout_marginTop="39dp"
            android:textSize="19sp"
            android:textColor="#2587FF"
            android:gravity="center"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/circle_shape_06"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_01"
            app:layout_constraintRight_toLeftOf="@+id/tv_p"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_p"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="确定"
            android:textSize="19sp"
            android:layout_marginLeft="6dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="19dp"
            android:gravity="center"
            android:background="@drawable/blue_circle_111_shape"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_c"
            app:layout_constraintLeft_toRightOf="@+id/tv_c"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/guanbi_update"
        android:id="@+id/cannel_tv"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>